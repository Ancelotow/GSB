{% extends ":Visiteur:base.html.twig" %}

{% block body %}
    <center>
        <div class="container">

            {% if total > montantValide %}
                <div class="alert alert-danger">
                    Votre montant total dépasse le montant valide qui est à {{ montantValide }} €.
                </div>
            {% elseif error == 1 %}
                <div class="alert alert-warning">
                    Vous n'avez aucune fiche frais pour ce mois-ci.
                </div>
            {% endif %}

            <h3>Synthèse pour le mois de {{ mois }}</h3><br/>
            <table class="table table-dark table-hover">
                <tr>
                    <th>Libelle</th>
                    <th>Montant total</th>
                </tr>
                <tr>
                    <td>Ligne Frais Forfait</td>
                    <td>{{ totalLFF }} €</td>
                </tr>
                <tr>
                    <td>Ligne Frais Hors Forfait</td>
                    <td>{{ totalLFHF }} €</td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td>{{ total }} €</td>
                </tr>
            </table><br/>
            <table class="table table-dark table-hover">
                <tr>
                    <th>Montant valide</th>
                    <th>{{ montantValide }} €</th>
                </tr>
            </table><br/>
        </div>
    </center>

{% endblock %}